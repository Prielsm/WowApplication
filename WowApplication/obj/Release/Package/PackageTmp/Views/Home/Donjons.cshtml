<div class="body-donjons">
    <header>
        <div class="header-img"
             style="background-image: url(/Static/Images/header_donjons.jpg)"></div>
        <nav class="flex justify-between">
            <div class="flex">
                <button class="flex btn-filter">
                    <img src="/Static/SVG/filter.svg" alt="" />
                    <span class="filtrer">Filtrer</span>
                </button>
                <div class="filters d-none">
                    <!-- FILTRE ZONE -->
                    <div>
                        <p>Zones</p>
                        <select id="zone-select">
                            <option value="allZones">All</option>
                            <option value="pandarie">Pandarie</option>
                            <option value="kalimdor">Kalimdor</option>
                            <option value="royaumeEst">Royaumes de l'Est</option>
                            <option value="norfendre">Norfendre</option>
                            <option value="outreterre">Outreterre</option>
                            <option value="zandalar">Zandalar</option>
                            <option value="kulTiras">Kul Tiras</option>
                            <option value="ombreterre">Ombreterre</option>
                        </select>
                    </div>
                    <!-- FILTRE TYPE -->
                    <div>
                        <p>Type</p>
                        <select id="type-select">
                            <option value="allInst">All</option>
                            <option value="donjon">Donjon</option>
                            <option value="raid">Raid</option>
                            <option value="boss">World Boss</option>
                        </select>
                    </div>
                    <!-- FILTRE BUTINS -->
                    <div class="butins-select">
                        <p>Butins</p>
                        <select id="type-select">
                            <option value="allButins">All</option>
                            <option value="monture">Monture</option>
                            <option value="pet">Pet</option>
                        </select>
                        <img class="search-filter" src="/Static/SVG/search_filter.svg" alt="">
                    </div>
                </div>
            </div>

            <div class="donjon-name uppercase">Donjons / Raids</div>

            <div class="flex connection">
                <span class="span-connection">Se connecter</span>
                <img src="/Static/SVG/connection.svg"
                     class="icon-connection"
                     alt="" />
            </div>
        </nav>
    </header>

    <main>
        <button class="refresh"><i class="fas fa-sync-alt"></i></button>
        <div class="flex flex-wrap justify-around">
            @foreach (WowApplication.Models.InstanceModel item in Model.InstanceModels)
            { 
                <div id="@item.Id" class="donjon lg:w-1/6 md:w-1/4 w-1/2"
                     style="background-image: url(@item.Media);" >
                    <a href="/Home/Loot/@item.Id">  </a>
                    <div class="modal-donjon">
                        <p class="type-inst">@item.Type</p>
                        <p>@item.Name</p>
